<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
</head>
<body>
    <section class="align-items-center bg-primary d-flex justify-content-center vh-100 vw-100">
        <article class="card bg-dark col-10 col-md-8 col-lg-6 p-0">
            <div class="card-header">
                <h1 class="display-2 text-center text-primary"> New Task </h1>
            </div>
            <form action="/task/save" method="post" class=" card-body">
                
                <select name="user" class="custom-select mb-2">
                    <% users.forEach(user => { %>
                        <option value="<%= user.id %>"><%= user.name %></option>
                    <% })%>
                </select>
                <select name="status" class="custom-select">
                    <% status.forEach(state => { %>
                        <option value="<%= state.id %>" class="bg-<%= state.color %>"><%= state.label %></option>
                    <% })%>
                </select>
                <textarea class="form-control my-2" name="title" cols="30" rows="10"></textarea>
                <input type="hidden" name="id" value="<%= id %>" >
                <button type="submit" class="btn btn-block btn-primary">Enviar</button>
            </form>
        </article>
    </section>

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
</body>
</html>